<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="250.0"
      style="-fx-background-color: #0B3D5D;"
      stylesheets="@sidebar-style.css"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.macroscanner.SidebarController">

    <padding>
        <Insets top="30.0" bottom="20.0" left="0.0" right="0.0" />
    </padding>

    <!-- Logo -->
    <ImageView fitHeight="60.0" fitWidth="60.0" preserveRatio="true">
        <image>
            <Image url="@../../../../../../../../MDef.png" />
        </image>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </ImageView>

    <!-- App Name -->
    <Label text="MacroScanner" textFill="WHITE">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
        <VBox.margin>
            <Insets bottom="40.0" />
        </VBox.margin>
    </Label>

    <!-- Navigation Buttons -->
    <VBox spacing="5.0" prefWidth="250.0">
        <Button fx:id="btnHome"
                text="Home"
                onAction="#handleHome"
                styleClass="sidebar-button"
                maxWidth="Infinity">
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true">
                    <image>
                        <Image url="@icons/home-icon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnScanHistory"
                text="Scan History"
                onAction="#handleScanHistory"
                styleClass="sidebar-button"
                maxWidth="Infinity">
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true">
                    <image>
                        <Image url="@icons/history-icon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnSettings"
                text="Settings"
                onAction="#handleSettings"
                styleClass="sidebar-button"
                maxWidth="Infinity">
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true">
                    <image>
                        <Image url="@icons/settings-icon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </VBox>
</VBox>