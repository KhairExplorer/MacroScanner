<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" style="-fx-background-color: #ECF0F1;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>

    <HBox spacing="20">
        <VBox alignment="CENTER" spacing="10" prefWidth="200" prefHeight="110"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Label text="Total Scans" style="-fx-text-fill: #7F8C8D;">
                <font><Font size="13" /></font>
            </Label>
            <Label text="127" style="-fx-text-fill: #2196F3; -fx-font-weight: bold;">
                <font><Font size="32" /></font>
            </Label>
        </VBox>

        <VBox alignment="CENTER" spacing="10" prefWidth="200" prefHeight="110"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Label text="Threats Found" style="-fx-text-fill: #7F8C8D;">
                <font><Font size="13" /></font>
            </Label>
            <Label text="3" style="-fx-text-fill: #E74C3C; -fx-font-weight: bold;">
                <font><Font size="32" /></font>
            </Label>
        </VBox>

        <VBox alignment="CENTER" spacing="10" prefWidth="200" prefHeight="110"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Label text="Files Clean" style="-fx-text-fill: #7F8C8D;">
                <font><Font size="13" /></font>
            </Label>
            <Label text="124" style="-fx-text-fill: #27AE60; -fx-font-weight: bold;">
                <font><Font size="32" /></font>
            </Label>
        </VBox>
    </HBox>

    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
        <Label text="Quick Scan" style="-fx-text-fill: #2C3E50; -fx-font-weight: bold;">
            <font><Font size="16" /></font>
        </Label>
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Button text="ðŸ” Scan File" prefHeight="40" prefWidth="140"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5;"/>
            <Label text="Select a file from your computer to scan for macro threats" style="-fx-text-fill: #7F8C8D;"/>
        </HBox>
    </VBox>

    <VBox spacing="15" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
        <Label text="Recent Scans" style="-fx-text-fill: #2C3E50; -fx-font-weight: bold;">
            <font><Font size="16" /></font>
        </Label>
        <TableView VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="File Name" prefWidth="280" />
                <TableColumn text="Status" prefWidth="150" />
                <TableColumn text="Date" prefWidth="200" />
            </columns>
        </TableView>
    </VBox>
</VBox>
