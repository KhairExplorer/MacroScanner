<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" alignment="CENTER" prefHeight="500.0" prefWidth="420.0" spacing="15.0"
      style="-fx-background-color: linear-gradient(to bottom, #E8E8E8, #F5F5F5);"
      stylesheets="@sidebar-style.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.macroscanner.MainController">

   <HBox alignment="TOP_RIGHT" spacing="0" VBox.vgrow="NEVER">
      <padding>
         <Insets right="5.0" top="5.0" />
      </padding>
      <Button text="—" styleClass="window-control"
              onAction="#onMinimizeClick" prefWidth="40" prefHeight="35"/>
      <Button text="⬜" styleClass="window-control"
              onAction="#onMaximizeClick" prefWidth="40" prefHeight="35"/>
      <Button text="✖" styleClass="window-control"
              onAction="#onCloseClick" prefWidth="40" prefHeight="35"/>
   </HBox>

   <VBox alignment="CENTER" spacing="0">
      <VBox alignment="CENTER" style="-fx-background-color: #1a3a54; -fx-background-radius: 8;"
            prefWidth="60" prefHeight="55">
         <Label text="M" style="-fx-text-fill: #4FC3F7; -fx-font-size: 30px; -fx-font-weight: bold;"/>
      </VBox>
   </VBox>

   <VBox alignment="CENTER" spacing="3.0">
      <Label text="MacroScanner" style="-fx-text-fill: #1a3a54;">
         <font><Font name="System Bold Italic" size="32.0" /></font>
      </Label>
      <Label text="Welcome to Macroscanner" style="-fx-text-fill: #666666;">
         <font><Font size="14.0" /></font>
      </Label>
   </VBox>

   <Label text="Choose way to login"
          style="-fx-background-color: #1a7a8a; -fx-text-fill: white; -fx-padding: 12 80; -fx-background-radius: 5;">
      <font><Font name="System Bold" size="16.0" /></font>
   </Label>

   <VBox alignment="CENTER" spacing="10.0">
      <padding>
         <Insets left="50.0" right="50.0" top="10.0" />
      </padding>

      <Button fx:id="btnUsernamePassword" text="Username and password"
              prefWidth="300" prefHeight="42" onAction="#onUsernamePasswordClick"
              styleClass="login-option-btn">
         <font><Font size="14.0" /></font>
      </Button>

      <Button fx:id="btnVerificationCode" text="Verification Code"
              prefWidth="300" prefHeight="42" onAction="#onVerificationCodeClick"
              styleClass="login-option-btn">
         <font><Font size="14.0" /></font>
      </Button>

      <Button fx:id="btnFaceID" text="Face ID"
              prefWidth="300" prefHeight="42" onAction="#onFaceIDClick"
              styleClass="login-option-btn">
         <font><Font size="14.0" /></font>
      </Button>
   </VBox>

   <padding>
      <Insets bottom="40.0" />
   </padding>
</VBox>
