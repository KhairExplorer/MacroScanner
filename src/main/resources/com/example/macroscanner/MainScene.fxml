<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="352.0" prefWidth="432.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.macroscanner.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ImageView fx:id="imageViewM" fitHeight="59.0" fitWidth="69.0" focusTraversable="true" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../../../icons/MDef.png" />
      </image>
   </ImageView>
   <VBox fx:id="vBox" alignment="CENTER" focusTraversable="true" prefHeight="138.0" prefWidth="223.0" spacing="15.0">
      <children>
         <Label fx:id="lblMacroScanner" text="Macro Scanner">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
         <Label fx:id="lblWelcome" text="Welcome to Macro Scanner" />
         <Label fx:id="lblChoose" style="-fx-background-color: #2196F3;;" text="Choose way to login" textFill="WHITE">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         <Button fx:id="btUP" mnemonicParsing="false" style="-fx-background-color: #ffffff;;" text="Username and Password" />
         <Button fx:id="btVC" mnemonicParsing="false" style="-fx-background-color: #ffffff;;" text="Verification Code" />
         <Button fx:id="btFID" mnemonicParsing="false" style="-fx-background-color: #ffffff;;" text="Face ID" />
      </children>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </VBox>

    <Label fx:id="welcomeText" />
   <opaqueInsets>
      <Insets bottom="5.0" right="5.0" top="5.0" />
   </opaqueInsets>
</VBox>
