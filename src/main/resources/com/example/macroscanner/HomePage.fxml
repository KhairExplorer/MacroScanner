<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<HBox fx:id="rootPane" prefHeight="700.0" prefWidth="1200.0"
      style="-fx-background-color: #FFFFFF;"
      stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.macroscanner.HomePageController">


    <fx:include fx:id="sidebar" source="Sidebar.fxml" />

    <BorderPane HBox.hgrow="ALWAYS">

        <top>
            <HBox style="-fx-background-color: #F2F2F2;">
                <padding>
                    <Insets bottom="5" left="15" right="10" top="5" />
                </padding>

                <Label text="MacroScanner" style="-fx-text-fill: #1a3a54; -fx-background-color: #F5F5F5; -fx-padding: 5 10; -fx-background-radius: 5; -fx-font-size: 14px; -fx-font-weight: bold;"/>

                <Region HBox.hgrow="ALWAYS" />

                <Button text="—" styleClass="window-control"
                        onAction="#onMinimizeClick" prefWidth="40" prefHeight="35"/>
                <Button text="⬜" styleClass="window-control"
                        onAction="#onMaximizeClick" prefWidth="40" prefHeight="35"/>
                <Button text="✖" styleClass="window-control"
                        onAction="#onCloseClick" prefWidth="40" prefHeight="35"/>
            </HBox>
        </top>

        <center>
            <StackPane fx:id="contentArea" style="-fx-background-color: #FFFFFF;">
                <padding>
                    <Insets bottom="30" left="40" right="40" top="20" />
                </padding>

                <VBox alignment="CENTER" spacing="20">
                    <VBox fx:id="dropZone" alignment="CENTER" spacing="15"
                          style="-fx-background-color: #1a7a8a; -fx-background-radius: 15;"
                          prefWidth="550" prefHeight="400">
                        <padding>
                            <Insets bottom="30" left="30" right="30" top="30" />
                        </padding>

                        <StackPane>
                            <VBox alignment="CENTER" style="-fx-background-color: #E8E8E8; -fx-background-radius: 10; -fx-padding: 10 20;">
                                <StackPane>
                                    <Label text="☁" style="-fx-font-size: 45px; -fx-text-fill: #CCCCCC;"/>
                                    <Label text="↑" style="-fx-font-size: 22px; -fx-text-fill: #666666;"/>
                                </StackPane>
                            </VBox>
                        </StackPane>

                        <VBox alignment="CENTER" spacing="0">
                            <Label text="Drag &amp; Drop Office" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                            <Label text="Files Here to Scan" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-underline: true;"/>
                        </VBox>
                    </VBox>

                    <Button text="SELECT FILE" onAction="#onSelectFileClick"
                            prefWidth="350" prefHeight="45"
                            style="-fx-background-color: #1a7a8a; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
                </VBox>
            </StackPane>
        </center>
    </BorderPane>
</HBox>
