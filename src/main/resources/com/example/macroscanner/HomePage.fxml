<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER"
      prefHeight="600.0"
      prefWidth="700.0"
      spacing="30.0"
      style="-fx-background-color: #f5f5f5;"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.macroscanner.HomePageController">

    <padding>
        <Insets top="50.0" bottom="50.0" left="50.0" right="50.0" />
    </padding>

    <!-- Drag & Drop Area -->
    <StackPane fx:id="dropArea"
               prefHeight="300.0"
               prefWidth="500.0"
               style="-fx-background-color: #16658A; -fx-background-radius: 15;">
        <VBox alignment="CENTER" spacing="20.0">
            <ImageView fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
                <image>
                    <Image url="@icons/cloud-upload.png" />
                </image>
            </ImageView>

            <VBox alignment="CENTER" spacing="5.0">
                <Label text="Drag &amp; Drop Office" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label text="Files Here to Scan" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </VBox>
        </VBox>
    </StackPane>

    <!-- Select File Button -->
    <Button fx:id="btnSelectFile"
            text="SELECT FILE"
            onAction="#handleSelectFile"
            style="-fx-background-color: #16658A; -fx-text-fill: white; -fx-background-radius: 5;"
            prefWidth="280.0"
            prefHeight="50.0">
        <font>
            <Font name="System Bold" size="16.0" />
        </font>
    </Button>
</VBox>